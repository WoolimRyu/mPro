    </div>

    <section>
      <% for(var i=0; i<hots.length; i++) { %>
        <div class="col-md-6" id="hot-wrapper1">
          <div id="hot-wrapper2-hover">
          </div>
          <div id="hot-wrapper2">
            <div class="col-md-5" style="height:300px;">
              <img src="<%=hots[i].poster%>">
            </div>

            <div class="col-md-7" style="height:300px;">
              <div class="ribbon-wrapper-heroic">
                <div class="ribbon-heroic">NEW
                </div>
              </div>
              <div class="hot-card-top">

              </div>
              <div class="hot-card-bottom">
                <div class="detailText" style="position:absolute;">
                  <b><p style="margin-top:20px;font-size:22px;color:navy; font-family: 'Jeju Gothic';"><%= hots[i].title %> DVD </p></b>
                  <img style="margin-left:10px;margin-top:40px;width:100px;height:137px;" src="<%=hots[i].pro_img%>"></img><p style="margin-left:20px;margin-top:120px;float:right;font-size:16px; font-family: 'Jeju Gothic';">누적 판매량 | <%=hots[i].sale%> 개 <br><br>
                  구매자 평균 별점 | <%=hots[i].rating%> </p>
                </div> 
                <button data-toggle="modal" data-target="#myModal" class="btn1 btnDetail" data-button style="absolute; margin-top:258px; margin-left:120px;">Detail View</button>
              </div>
            </div>
          </div>
        </div>
      <% } %>

